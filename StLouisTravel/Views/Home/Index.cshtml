@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">St. Louis Travel</h1>
    </div>

    <div class="text-center">
        <h3 class="card-header">Explore More</h3>
        </div>
        <div class="card-body">
            <img style="height: 724px; width: 965px; display: block;" src="/Images/StLWatercolor2.jpg" alt="Watercolor of St. Louis">   
            
        </div>
        
        <div class="align-content-center">
            
            <p class="card-text">
                St. Louis Travel is an editable guide to the best attractions in St. Louis. Users can add, edit, and review
                places of interest around the Greater St. Louis Area. Check out our list of restaurants, parks, museums, and other must see attractions.
            </p>
        </div>
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Explore St. Louis</h4>
            <p class="card-text">Please check back for updates and other details.</p>
            <a asp-controller="Location" asp-action="Create" class="card-link">Add Location</a>
            <a asp-controller="Location" asp-action="Index" class="card-link">View Locations</a>
        </div>
    </div>
